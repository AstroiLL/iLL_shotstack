{
  "name": "Test",
  "resourcesDir": "Content",
  "template": {
    "timeline": {
      "tracks": [
        {
          "clips": [
            {
              "asset": {
                "type": "video",
                "src": "{{Content/test.mp4}}",
                "trim": 0,
                "overlay": {
                  "type": "title",
                  "text": "Test text",
                  "style": "minimal",
                  "position": "bottom",
                  "size": "small"
                }
              },
              "start": 0.0,
              "length": 5.0,
              "fit": "cover",
              "effect": "zoomIn",
              "transition": {
                "in": "zoom"
              }
            }
          ]
        }
      ],
      "background": "#000000"
    },
    "output": {
      "format": "mp4",
      "resolution": "hd",
      "aspectRatio": "9:16",
      "fps": 30,
      "thumbnail": {
        "capture": 1
      }
    }
  },
  "merge": [
    {
      "find": "Content/test.mp4",
      "replace": ""
    }
  ]
}